<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_category_general_name">
        <ListPreference
            android:title="@string/pref_title_font_size"
            android:key="@string/pref_key_font_size"
            android:entries="@array/pref_font_size_titles"
            android:entryValues="@array/pref_font_size_values"
            android:defaultValue="@string/pref_default_font_size"/>

        <ListPreference
            android:title="@string/pref_title_shade_intensity"
            android:key="@string/pref_key_shade_intensity"
            android:entries="@array/pref_shade_intensity_titles"
            android:entryValues="@array/pref_shade_intensity_values"
            android:defaultValue="@string/pref_default_shade_intensity"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_category_wallpaper_name">
        <Preference android:key="@string/pref_key_pick_wallpaper"
            android:persistent="false"
            android:title="@string/pref_title_pick_wallpaper" />
        <Preference android:key="@string/pref_key_clear_wallpaper"
            android:persistent="false"
            android:title="@string/pref_title_clear_wallpaper"/>
    </PreferenceCategory>
</PreferenceScreen>
