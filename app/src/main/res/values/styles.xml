<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <dimen name="actionBarSize">48dp</dimen>
    <dimen name="actionBarInset">64dp</dimen>

    <style name="NewPageShapeOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>

    <style name="AppTheme.MonoChromeToolbar" parent="Widget.Material3.Toolbar">
        <item name="backgroundColor">?attr/colorPrimarySurface</item>
    </style>

    <style name="AppTheme.XLTitle" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textSize">72sp</item>
        <item name="android:textColor">#77000000</item>
    </style>

    <style name="sortByLabel">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
