<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nbennettsoftware.android.npad.SettingsActivity"
    android:background="@android:color/black">

    <com.nbennettsoftware.android.npad.widgets.WallpaperView
        android:id="@+id/settings_wallpaperImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.ContentFrameLayout
            android:id="@+id/settings_fragment_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.appcompat.widget.ContentFrameLayout>
    </LinearLayout>
</FrameLayout>