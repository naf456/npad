<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nbennettsoftware.android.npad.SettingsActivity">

    <ImageView
        android:id="@+id/settings_wallpaperImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <!-- Overlay -->
    <FrameLayout
        android:id="@+id/settings_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:background="@color/subtleShade"
            android:fitsSystemWindows="true"/>

        <android.support.v7.widget.ContentFrameLayout
            android:id="@+id/settings_fragment_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.ContentFrameLayout>
    </LinearLayout>
</FrameLayout>