<resources>
    <style name="AppTheme" parent="Theme.AppCompat">

        <!-- Use support toolbar instead -->
        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textCursorDrawable">@null</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="smallerActionBarButtons" parent="AppTheme">
        <item name="popupMenuStyle">@style/editToolbarStyle.popupStyle</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="actionButtonStyle">@style/tinyActionBarIcons.actionButton</item>
        <item name="android:actionButtonStyle">@style/tinyActionBarIcons.actionButton</item>
        <item name="actionOverflowButtonStyle">@style/tinyActionBarIcons.actionButton.overflow</item>
    </style>

    <style name="tinyActionBarIcons.actionButton" parent="Base.Widget.AppCompat.ActionButton">
        <item name="android:minWidth">24dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:width">40dp</item>
    </style>

    <style name="tinyActionBarIcons.actionButton.overflow" parent="Base.Widget.AppCompat.ActionButton.Overflow">
        <item name="android:minWidth">24dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:width">40dp</item>
    </style>


    <style name="editToolbarStyle.popupStyle" parent="Base.Widget.AppCompat.PopupWindow">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="android:panelBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
