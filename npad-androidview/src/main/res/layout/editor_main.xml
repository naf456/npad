<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naf.npad.android.MainActivity">

    <com.naf.npad.android.editor.WallpaperView
        android:id="@+id/editor_document_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.naf.npad.android.editor.KeyboardShrinkingFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/editor_adaptive_fade"
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:layout_gravity="bottom|center_horizontal"
            android:alpha="0"
            android:background="@drawable/gradient_white_fade"
            android:backgroundTint="@color/material_dynamic_primary40" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="always">

            <io.github.mthli.knife.KnifeText
                android:id="@+id/editor_knifeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="top|start"
                android:imeOptions="flagNoExtractUi"
                android:paddingLeft="8dp"
                android:paddingTop="32dp"
                android:paddingRight="8dp"
                android:paddingBottom="@dimen/actionBarInset"
                android:textColor="@color/textColor"
                app:historyEnable="false"
                tools:text="Hello World" />

        </ScrollView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/editor_toolbar_container"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionBarSize"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/horz_pill_white"
            android:backgroundTint="@color/colorAccent"
            android:elevation="8dp">

            <TextView
                android:id="@+id/editor_document_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/actionBarSize"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="-32dp"
                android:fitsSystemWindows="false"
                android:gravity="center|center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Document Name" />

            <androidx.appcompat.widget.ActionMenuView
                android:id="@+id/editor_undoMenu"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/actionBarSize"
                android:layout_gravity="end"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/editor_document_title"
                app:layout_constraintTop_toTopOf="@+id/editor_document_title"
                app:showDividers="middle" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.naf.npad.android.editor.KeyboardShrinkingFrameLayout>

    <View
        android:id="@+id/editor_photomode_exit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>
